@model IEnumerable<ORTastic.Models.Compra>

@{
    ViewData["Title"] = "Mis Compras";
}

<h1>Mis Compras</h1>

<p>
    <a asp-action="Comprar">Realizar Compra</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
             Nombre del Evento
            </th>
            <th>
             Precio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotal)
            </td>
          
            <td>
            
                <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> 
               
            </td>
        </tr>
}
    </tbody>
</table>
