@model ORTastic.Models.Evento

@{
    ViewData["Title"] = "Detalles del evento";
}

<h1>Detalles del evento</h1>

<div>
    <h4>Evento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Nombre del Evento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombreevento)
        </dd>
        <dt class = "col-sm-2">
          Fecha y Hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
          Equipos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Equipos)
        </dd>
        <dt class = "col-sm-2">
         Precio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
