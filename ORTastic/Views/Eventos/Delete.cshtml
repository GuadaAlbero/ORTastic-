@model ORTastic.Models.Evento

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Estas seguro que deseas eliminar el evento?</h3>
<div>
    <h4>Evento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Nombre del Evento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombreevento)
        </dd>
        <dt class = "col-sm-2">
           Fecha y Hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
         Equipos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Equipos)
        </dd>
        <dt class = "col-sm-2">
        Precio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
